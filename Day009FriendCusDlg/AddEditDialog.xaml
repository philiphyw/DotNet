<Window x:Class="Day009FriendCusDlg.AddEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day009FriendCusDlg"
        mc:Ignorable="d"
        Title="AddEditDialog" Height="150" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="label" Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="75,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Button x:Name="btCancel" Content="Cancel" IsCancel="True" HorizontalAlignment="Left" Margin="30,57,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btSave" Content="Save" HorizontalAlignment="Left" Margin="126,57,0,0" VerticalAlignment="Top" Width="75" Click="btSave_Click"/>

    </Grid>
</Window>
